        mat2.impmat();

        cout<<"\n\n";

        cout<<"\t\t\t\tSoma das matrizes\n\n";

        if(mat3.somamat(mat1,mat2))
        {
         mat3.impmat();
        }
        else
        {
          cout<<"Nao e possivel obter a soma!";
        }

        cout<<"\n\n\n";

        cout<<"\t\t\t\tDesaja escolher outra operaçao ?\n";
        cout<<"[1] Sim!\n";
        cout<<"[0] Nao!\n";

        cout<<"Sua escolha: ";
        cin>>flag;

        cout<<"\n\n\n";
        break;

