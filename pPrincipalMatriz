        mat2.impmat();

        cout<<"\n\n";

        cout<<"\t\t\tSubtracao das matrizes!\n\n";

        if(numero == 1)
        {
           if(mat3.subtmat(mat1 , mat2))
           {
             mat3.impmat();
           }
           else
           {
             cout<<"Nao e possivel obter a subtracao!";
           }
