        cout<<"Qual matriz deseja verificar?\n";
        cout<<"Tecle '1' se deseja verificar a matriz 1\n";
        cout<<"Tecle '2' se deseja verificar a matriz 2\n";
        cout<<"sua escolha e: ";
        cin>>numero;

        cout<<"\n\n";

        cout<<"\t\t\t\tMatriz 1\n\n";
        mat1.impmat();

        cout<<"\n\n\t\t\t\tMatriz 2\n\n";
        mat2.impmat();

        cout<<"\n\n";

