              cout<<"Sim, e uma matriz triangular inferior!";
            }
            else
            {
              cout<<"Nao e uma matriz triangular inferior!";
            }
        }
        else
        {
            if(mat2.triinf())
           {
             cout<<"Sim, e uma matriz triangular inferior!";
           }
            else
           {
             cout<<"Nao e uma matriz triangular inferior!";
           }
        }

        cout<<"\n\n\n";

        cout<<"\t\t\t\tDesaja escolher outra operaçao ?\n";
        cout<<"[1] Sim!\n";
        cout<<"[0] Nao!\n";

        cout<<"Sua escolha: ";
        cin>>flag;

        cout<<"\n\n\n";
