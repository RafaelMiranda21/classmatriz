             cout<<"Sim, e uma matriz triangular superior!";
           }
            else
           {
             cout<<"Nao e uma matriz triangular superior!";
           }
        }

        cout<<"\n\n\n";

        cout<<"\t\t\t\tDesaja escolher outra operaçao ?\n";
        cout<<"[1] Sim!\n";
        cout<<"[0] Nao!\n";

        cout<<"Sua escolha: ";
        cin>>flag;

        cout<<"\n\n\n";
        break;

